{
	"name": "lavender-commerce/lavender",
	"description": "Lavender",
	"keywords": ["lavender", "ecommerce"],
	"license": "MIT",
    "authors": [
        {
            "name": "Ryan Tulino",
            "email": "rtulino@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/lavender-commerce/core"
        },
        {
            "type": "vcs",
            "url": "https://github.com/lavender-commerce/multisite"
        },
        {
            "type": "vcs",
            "url": "https://github.com/lavender-commerce/cms"
        },
        {
            "type": "vcs",
            "url": "https://github.com/lavender-commerce/catalog"
        }
    ],
	"require": {
        "php": ">=5.4.0",
		"laravel/framework": "4.2.*",
        "lavender-commerce/core": "dev-master",
        "lavender-commerce/multisite": "dev-master",
        "lavender-commerce/cms": "dev-master",
        "lavender-commerce/catalog": "dev-master"
	},
	"autoload": {
		"classmap": [
            "app/lib",
            "app/database/migrations",
			"app/database/seeds"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
